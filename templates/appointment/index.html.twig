{% extends 'base.html.twig' %}

{% block title %}MeinPraxis - Termine{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-lg-12 col-xl-12">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <h1 class="h3 font-weight-normal">Ihre Termine</h1>
        <br>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Titel</th>
                <th scope="col">PatientIn</th>
                <th scope="col">Datum</th>
                <th scope="col">Startzeit</th>
                <th scope="col">Endzeit</th>
                <th scope="col">Beendet</th>
                <th scope="col">Optionen</th>
            </tr>
            </thead>
            <tbody>
                {% for appointment in appointments %}
                    <tr>
                        <td>{{ appointment.title }}</td>
                        <td>{{ appointment.customer }}</td>
                        <td>{{ appointment.date | date('d.m.Y')}}</td>
                        <td>{{ appointment.startTime | date('H:i') }}</td>
                        <td>{{ appointment.endTime | date('H:i')}}</td>
                        <td>{{ appointment.complete ? 'Ja' : 'Nein' }}</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Optionen">
                                <button type="button" class="btn btn-secondary btn-success">Beenden</button>
                                <button type="button" class="btn btn-secondary btn-danger">LÃ¶schen</button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}