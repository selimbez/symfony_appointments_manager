{% extends 'base.html.twig' %}

{% block title %}MeinPraxis - Neuer Termin{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-lg-12 col-xl-12">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-dismissible alert-{{ label }} fade show" role="alert">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
    <div class="row">
        {{ form_start(form, {'attr': {'class':'col-sm-12'}}) }}
            <h1 class="h3 mb-3 font-weight-normal">Termin anlegen</h1>
            <br>
            <div class="form-group">
                {{ form_row(form.title) }}
            </div>
            <div class="form-group">
                {{ form_row(form.customer) }}
            </div>
            <div class="form-group">
                {{ form_row(form.date) }}
            </div>
            <div class="form-group">
                {{ form_row(form.startTime) }}
            </div>
            <div class="form-group">
                {{ form_row(form.endTime) }}
            </div>
            <div class="form-group">
                {{ form_row(form.assignee) }}
            </div>
        <div class="form-group col-md-4 float-right">
            {{ form_row(form.submit) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}